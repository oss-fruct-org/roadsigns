    <ListPreference
        android:defaultValue="100"
        android:entries="@array/pref_nearest_points_str"
        android:entryValues="@array/pref_nearest_points_values"
        android:key="nearest_points"
        android:summary="Show all"
        android:title="Nearest points" />

